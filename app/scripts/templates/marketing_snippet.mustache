  {{#showSignUpMarketing}}
    <aside class="marketing desktop text-snippet default" data-marketing-type="android-sync">
      {{#isiOS}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for iOS.{{/t}}
        </p>
        <a href="{{ appStoreLink }}" class="marketing-link"><img src="{{ appStoreImage }}"></a>
      {{/isiOS}}

      {{#isAndroid}}
        <p>
          {{#t}}Get the full Sync experience.{{/t}}
          <br>
          {{#t}}Download Firefox for Android.{{/t}}
        </p>
        <a class="marketing-link" href="market://details?id=org.mozilla.firefox&amp;referrer=utm_source%3Dmozilla%26utm_medium%3DReferral%26utm_campaign%3Dsync-android-snippet"><img width="129" height="45" src="{{ playStoreImage }}"></a>
